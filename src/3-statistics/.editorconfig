# EditorConfig for R Project
# https://editorconfig.org/
#
# PRIMARY CONFIGURATION FILE
# This is the single source of truth for code style settings.
# Other tools (.lintr, RStudio) should reference these same values.
#
# Line length: 100 characters
# Indentation: 2 spaces

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{r,R}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{Rmd,rmd}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{json,JSON}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{md,MD}]
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

